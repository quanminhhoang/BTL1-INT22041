<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.control.Menu?>
<?import javafx.scene.control.MenuBar?>
<?import javafx.scene.control.MenuItem?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.control.TextField?>
<?import javafx.scene.image.Image?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.input.KeyCodeCombination?>
<?import javafx.scene.layout.AnchorPane?>

<AnchorPane prefHeight="400.0" prefWidth="600.0" xmlns="http://javafx.com/javafx/16" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.example.dictionaryapp.Contronler">
    <children>
        <MenuBar fx:id="menuBar" layoutX="-12.0" layoutY="2.0">
            <menus>
                <Menu mnemonicParsing="false" text="File">
                    <items>
                        <MenuItem mnemonicParsing="false" onAction="#close" text="Close">
                            <accelerator>
                                <KeyCodeCombination alt="UP" code="Q" control="DOWN" meta="UP" shift="UP" shortcut="UP" />
                            </accelerator></MenuItem>
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Edit">
                    <items>
                        <MenuItem mnemonicParsing="false" text="New Word">
                            <graphic>
                                <TextField fx:id="add_Target" />
                            </graphic></MenuItem>
                        <MenuItem mnemonicParsing="false" text="Meaning">
                            <graphic>
                                <TextField fx:id="add_Explain" onKeyReleased="#insert_newWord" />
                            </graphic>
                        </MenuItem>
                    </items>
                </Menu>
                <Menu mnemonicParsing="false" text="Help">
                    <items>
                        <MenuItem mnemonicParsing="false" text="About" />
                    </items>
                </Menu>
            </menus>
        </MenuBar>
        <TextField fx:id="searchField" layoutX="32.0" layoutY="46.0" onKeyReleased="#inputsearch" prefHeight="26.0" prefWidth="226.0" />
        <ListView fx:id="listView" editable="true" layoutX="33.0" layoutY="95.0" onMouseClicked="#clicked" prefHeight="290.0" prefWidth="257.0" />
        <Button layoutX="355.0" layoutY="46.0" mnemonicParsing="false" onAction="#wordlookup">
            <graphic>
                <ImageView fitHeight="16.0" fitWidth="25.0" layoutX="355.0" layoutY="46" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@dictionary.png" />
                    </image>
                </ImageView>
            </graphic>
        </Button>
        <TextArea fx:id="textArea" layoutX="355.0" layoutY="95.0" onKeyPressed="#mode_word" prefHeight="290.0" prefWidth="225.0" />
        <Button fx:id="erase" layoutX="258.0" layoutY="45.0" mnemonicParsing="false" onAction="#erase_search" prefHeight="28.0" prefWidth="10.0">
            <graphic>
                <ImageView fitHeight="20.0" fitWidth="20.0" layoutX="258.0" layoutY="45" pickOnBounds="true" preserveRatio="true">
                    <image>
                        <Image url="@X.png" />
                    </image>
                </ImageView>
            </graphic>
        </Button>
      <Button fx:id="TLAPI" layoutX="427.0" layoutY="46.0" mnemonicParsing="false" onAction="#WordToTLAPI" text="API" />
      <Button fx:id="TTS" layoutX="503.0" layoutY="47.0" mnemonicParsing="false" onAction="#TTS" text="TTS" />
    </children>
</AnchorPane>
